@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2 style="text-align: center; color: orange; font-size: 50px">ĐĂNG NHẬP</h2>
<br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    {
    <div class="container">

        <table class="table">
            <tr>
                <td style="text-align: center; font-size: 20px; font-weight: bold;">Tên Đăng Nhập</td>
                <td style="color:red;">@Html.TextBox("TenDN", "", new { @class = "form-control" }) @ViewData["Loi_dn_1"]</td>
            </tr>
            <tr>
                <td style="text-align: center; font-size: 20px; font-weight: bold;">Mật Khẩu</td>
                <td style="color:red;">@Html.TextBox("MatKhau", "", new { @class = "form-control" }) @ViewData["Loi_dn_2"]</td>
            </tr>
        </table>

        <center><input type="submit" class="btn btn-primary" value="Đăng Nhập"/> @ViewBag.TB</center>
    </div>
    }
}

