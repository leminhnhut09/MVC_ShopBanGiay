@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2 style="text-align: center; color:orange; font-size:50px">ĐĂNG KÝ</h2>
<br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    {
    <div class="container">
        <table class="table">
            <tr>
                <td style="text-align: center; font-size:20px; font-weight:bold;">Họ Tên KH</td>
                <td>@Html.TextBox("HotenKH", "", new { @class = "form-control" })
                    <p style="color: red;">@ViewData["Loi1"]</p>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Tên Đăng Nhập</td>
                <td>@Html.TextBox("TenDN", "", new { @class = "form-control" })
                    <p style="color: red;">@ViewData["Loi2"]</p>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Mật Khẩu</td>
                <td>@Html.Password("MatKhau", "", new { @class = "form-control" })
                    <p style="color: red;">@ViewData["Loi3"]</p>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Nhập lại mật khẩu</td>
                <td>@Html.Password("ReMatKhau", "", new { @class = "form-control" })
                    <p style="color: red;">@ViewData["Loi4"]</p>
                    @ViewData["loi_khongkhop"]</td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Giới Tính</td>
                <td>
                    <select class="form-control" name="GioiTinh">
                        <option>Nam</option>
                        <option>Nữ</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Điện Thoại</td>
                <td>@Html.TextBox("DienThoai", "", new { @class = "form-control" })
                    <p style="color: red;">@ViewData["Loi6"]</p>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Ngày Sinh</td>
                <td>
                    <input type="date" name="NgaySinh" style="width: 400px" class="form-control" /><p style="color: red;">@ViewData["Loi7"]</p>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Email</td>
                <td>
                    <input type="text" name="Email" style="width: 100%" class="form-control" /><p style="color: red;">@ViewData["Loi8"]</p>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;  font-size:20px; font-weight:bold;">Địa Chỉ</td>
                <td>
                    <input type="text" name="DiaChi" style="width: 100%" class="form-control" /><p style="color: red;">@ViewData["Loi9"]</p>
                </td>
            </tr>
        </table>
          <center><input type="submit" class="btn btn-primary" value="ĐĂNG KÝ" /><p style="color:red;">@ViewData["Loi10"]</p></center>
    </div>
    }
}